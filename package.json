{
  "name": "leka-bot",
  "version": "1.0.0",
  "description": "เลขาบอทสำหรับ LINE กลุ่ม - Task & Calendar Management Bot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "css:build": "postcss ./dashboard/input.css -o ./dashboard/tailwind.css --env production",
    "css:watch": "postcss ./dashboard/input.css -o ./dashboard/tailwind.css --watch",
    "build": "npm run css:build && node build.js",
    "start": "node -r ./register-paths.js dist/index.js",
    "deploy": "npm run deploy:migrate && npm run start",
    "deploy:migrate": "node scripts/deploy-migration.js",
    "deploy:backup": "npm run deploy:migrate-backup && npm run start",
    "deploy:migrate-backup": "node -r ./register-paths.js dist/scripts/deployMigrationBackup.js",
    "deploy:no-build": "SKIP_BUILD=true npm run deploy:migrate && npm run start",
    "db:init": "tsx src/scripts/initDatabase.ts",
    "db:sync": "npm run build && node -r ./register-paths.js dist/scripts/initDatabase.js",
    "db:test": "tsx src/scripts/testDatabase.ts",
    "db:migrate-admin": "tsx src/scripts/updateAllMembersToAdmin.ts",
    "db:migrate-supervisors": "tsx src/scripts/updateGroupSettingsForSupervisors.ts",
    "db:migrate-task-workflow": "tsx src/scripts/migrateTaskWorkflow.ts",
    "db:migrate-add-columns": "tsx src/scripts/addMissingColumns.ts",
    "db:fix-kpi-foreign-key": "tsx src/scripts/fixKpiRecordsForeignKey.ts",
    "db:check-kpi-foreign-keys": "tsx src/scripts/checkKpiForeignKeys.ts",
    "db:check-schema": "tsx src/scripts/checkDatabaseSchema.ts",
    "db:migrate-all": "tsx src/scripts/runFullMigration.ts",
    "db:migrate-overdue-kpi": "tsx src/scripts/migrateOverdueKPIType.ts",
    "db:migrate-comprehensive": "tsx -r tsconfig-paths/register src/utils/comprehensiveMigration.ts",
    "db:migrate-duration-days": "tsx src/scripts/addDurationDaysToRecurringTasks.ts",
    "db:ensure-duration-days": "tsx src/scripts/ensureDurationDaysColumn.ts",
    "test:rules": "tsx src/scripts/testProjectRules.ts",
    "test:leaderboard": "tsx src/scripts/testLeaderboard.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "line",
    "bot",
    "task-management",
    "calendar",
    "thai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@line/bot-sdk": "^7.5.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.25.9",
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "moment-timezone": "^0.5.43",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "parseurl": "^1.3.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.14",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.17",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.7",
    "@types/node-cron": "^3.0.9",
    "@types/nodemailer": "^6.4.13",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.13",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.1.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}